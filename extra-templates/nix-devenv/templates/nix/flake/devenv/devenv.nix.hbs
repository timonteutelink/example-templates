localFlake:
{ lib, config, self, inputs, ... }: {
  imports = [
    inputs.devenv.flakeModule
  ];

  perSystem = { pkgs, system, ... }: {
    devenv.shells.default = {
      name = "{{project_name}}";

      env = {
        {{#each env_vars}}
        {{env_name}} = "{{env_value}}";
        {{/each}}
      };

      packages = with pkgs; [
      ];

      languages = {
        {{#if languages.javascript.bun}}
        javascript.bun.enable = true;
        {{/if}}
      };

      pre-commit = {
        hooks = {
          nixpkgs-fmt.enable = true;
        };
      };

      enterShell = ''
        echo 'Welcome to the {{project_name}} development shell!'
      '';
    };
  };
}
